{
    "name": "sky003/silex-auth-service",
    "type": "project",
    "description": "Authentication service built with Silex",
    "require": {
        "silex/silex": "^2.2",

        "monolog/monolog": "^1.23",
        "graylog2/gelf-php": "^1.5",

        "doctrine/dbal": "^2.6",
        "doctrine/migrations": "^1.5",

        "symfony/serializer": "^3.3",
        "symfony/validator": "^3.3",
        "symfony/security": "^3.3",
        "firebase/php-jwt": "^5.0"
    },
    "require-dev": {
        "codeception/codeception": "^2.3",
        "codeception/c3": "^2.0",

        "doctrine/orm": "^2.5",
        "doctrine/data-fixtures": "^1.2",
        "nelmio/alice": "^3.0@RC",

        "escapestudios/symfony2-coding-standard": "^2.11"
    },
    "autoload": {
        "psr-4": {
            "Auth\\": "src/"
        }
    },
    "scripts": {
        "init-database": "Auth\\ComposerScript::initDatabase"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
